= styles_for :task, :contact, :opportunity

#confirm{ hidden }
.title_tools#menu
  = link_to_inline(:edit_account, edit_account_path(@asset), :text => t(:edit)) + " | "
  = link_to_function(t(:delete) + '?', confirm_delete(@asset))
.title#edit_account_title= h(@asset.name)

%div#edit_account{ hidden }

= render "comments/new", :commentable => @asset
= render :partial => "shared/timeline", :collection => @timeline

= hook(:show_account_bottom, self) do

  = section(@asset, :tasks)
  .log#tasks
    = render "shared/tasks"

  = section(@asset, :contacts)
  .list#contacts
    - @contacts = @asset.contacts.paginate(:page => 1, :per_page => 20)
    = render :partial => "contacts/contact", :collection => @contacts
  = will_paginate @contacts, :id => true, :params => {:action => :contacts}

  %br( style="clear:both" )

  = section(@asset, :opportunities)
  .list#opportunities
    - @opportunities = @asset.opportunities.paginate(:page => 1, :per_page => 20)
    = render :partial => "opportunities/opportunity", :collection => @opportunities
  = will_paginate @opportunities, :id => true, :params => {:action => :opportunities}

  = load_select_popups_for(@asset, :tasks, :contacts, :opportunities)

