= styles_for :task, :lead, :opportunity

#confirm{ hidden }
.title_tools#menu
  = link_to_inline(:edit_campaign, edit_campaign_path(@asset), :text => t(:edit)) + " | "
  = link_to_function(t(:delete) + '?', confirm_delete(@asset))
.title#edit_campaign_title= h(@asset.name)

%div#edit_campaign{ hidden }

= render "comments/new", :commentable => @asset
= render :partial => "shared/timeline", :collection => @timeline

= section(@asset, :tasks)
.log#tasks
  = render "shared/tasks"

= section(@asset, :leads)
.list#leads
  - @leads = @asset.leads.paginate(:page => 1, :per_page => 20)
  = render :partial => "leads/lead", :collection => @asset.leads.paginate(:page => 1, :per_page => 20)
= will_paginate @leads, :id => true, :params => {:action => :leads}

%br( style="clear:both" )

= section(@asset, :opportunities)
.list#opportunities
  - @opportunities = @asset.opportunities.paginate(:page => 1, :per_page => 20)
  = render :partial => "opportunities/opportunity", :collection => @asset.opportunities.paginate(:page => 1, :per_page => 20)
= will_paginate @opportunities, :id => true, :params => {:action => :opportunities}

= load_select_popups_for(@asset, :tasks, :leads, :opportunities)

= hook(:show_campaign_bottom, self)
