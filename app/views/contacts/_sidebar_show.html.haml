.panel#summary
  %span{:style => "float:right"}= gravatar_for(@asset, :size => "50x50")
  %h4= h(@asset.full_name)
  - if !@asset.title.blank? && @asset.account
    -# works_at: "{{h(job_title)}} at {{h(company)}}"
    %div= t(:works_at, :job_title => h(@asset.title), :company => link_to(h(@asset.account.name), account_path(@asset.account))).html_safe
  - elsif !@asset.title.blank?
    %div= h(@asset.title)
  - elsif @asset.account
    %div= link_to(h(@asset.account.name), account_path(@asset.account))
  - unless @asset.department.blank?
    = t(:department_small, h(@asset.department))

  %div= render "shared/address_show", :asset => @asset, :type => 'business', :title => :address

  %div
    - unless @asset.phone.blank?
      == #{t :phone}: <b>#{@asset.do_not_call ? content_tag(:strike, h(@asset.phone)) : h(@asset.phone)}</b><br />
    - unless @asset.mobile.blank?
      == #{t :mobile}: <b>#{@asset.do_not_call ? content_tag(:strike, h(@asset.mobile)) : h(@asset.mobile)}</b><br />
    - unless @asset.fax.blank?
      == #{t :fax}: <b>#{@asset.do_not_call ? content_tag(:strike, h(@asset.fax)) : h(@asset.fax)}</b><br />
  %div
    - unless @asset.email.blank?
      == #{t :email}: <b>#{link_to_email(@asset.email)}</b><br />
    - unless @asset.alt_email.blank?
      == #{t :alt_email_small}: <b>#{link_to_email(@asset.alt_email)}</b><br />

  = web_presence_icons(@asset)

  - unless @asset.background_info.blank?
    .caption #{t :background_info}
    = auto_link(simple_format @asset.background_info).html_safe

  = render "fields/sidebar_show", :asset => @asset

  - if @asset.tag_list.present?
    %dt
      .tags= tags_for_index(@asset) 

  = hook(:show_contact_sidebar_bottom, self, :contact => @asset)
